<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="psp.c_calc2.ui.ChatControl">
   <children>
      <SplitPane dividerPositions="0.5" VBox.vgrow="ALWAYS">
         <items>
            <TextArea fx:id="areaChatLog" prefHeight="200.0" prefWidth="200.0" />
            <ListView fx:id="listConectedPeers" prefHeight="200.0" prefWidth="200.0" />
         </items>
      </SplitPane>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Circle fx:id="circleClientStatus" fill="#ff1f1f" radius="10.0" stroke="BLACK" strokeType="INSIDE" />
            <TextField fx:id="fieldMessageDraft" layoutX="10.0" layoutY="10.0" maxWidth="1.7976931348623157E308" onAction="#sendMessageAction" HBox.hgrow="ALWAYS" />
            <Button fx:id="btnSend" layoutX="159.0" layoutY="10.0" mnemonicParsing="false" onAction="#sendMessageAction" text="Enviar" />
         </children>
      </HBox>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Button fx:id="btnExit" layoutX="371.0" layoutY="10.0" mnemonicParsing="false" onAction="#btnExitAction" text="Cerrar" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
